<Window x:Class="OrgStructure.WPF._5_Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrgStructure.WPF"
        mc:Ignorable="d"
        Title="_5_Manager" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock  Text="Ставка %"         Grid.Column="0" Grid.Row="0"/>
        <TextBox    x:Name="coefSalaryTB"   Grid.Column="1" Grid.Row="0" Text="{Binding CoefSalary}"/>
        <TextBlock  Text="Минимальная ЗП"   Grid.Column="0" Grid.Row="1"/>
        <TextBox    x:Name="lowSalaryTB"    Grid.Column="1" Grid.Row="1" Text="{Binding LowSalary}"/>
    </Grid>
</Window>
